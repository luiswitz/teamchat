<!DOCTYPE html>
<html>
  <head>
    <title>Onebitchat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- navbar + sidebar -->
    <header>
      <%= render "shared/navbar" %>
      <%= render "shared/sidebar" %>
    </header>

    <main>
      <div class="container">
        <% if flash[:notice] %>
          <%= javascript_tag "Materialize.toast('#{flash[:notice]}', 4000, 'green')" %>
        <% end %>
        <%= yield %>
      </div>
    </main>

    <!-- logged partials -->
    <% if current_user %>
      <%= render "teams/add_modal" %>
      <% if @team %>
        <%= render "teams/remove_modal" %>
        <%= render "team_users/remove_modal" %>
        <%= render "channels/add_modal" %>
        <%= render "channels/remove_modal" %>
        <%= render "invitations/invite_modal" %>
      <% end %>
    <% end %>
  </body>
</html>
